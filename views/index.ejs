<script>
  // Force autoplay on first interaction
  function forceAutoplay() {
    const iframe = document.getElementById("watchtime-frame");
    const src = iframe.src;
    iframe.src = ""; // reset src
    setTimeout(() => iframe.src = src + "&autoplay=1", 100);
  }

window.addEventListener("DOMContentLoaded", () => {
  forceAutoplay();
});

  window.addEventListener("click", function once() {
    forceAutoplay();
    window.removeEventListener("click", once);
  });
</script>
